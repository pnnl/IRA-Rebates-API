{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://ira-rebates.labworks.org/schemas/electrificationReporting",
  "type": "array",
  "items": {
    "type": "object",
    "properties": {
      "building_address": {
        "$ref": "/schemas/definitions#building_address"
      },
      "address_id": {
        "$ref": "/schemas/definitions#address_id"
      },
      "is_dac": {
        "$ref": "/schemas/definitions#is_dac"
      },
      "sf_conditioned_floor_area": {
        "$ref": "/schemas/definitions#sf_conditioned_floor_area"
      },
      "mf_conditioned_floor_area": {
        "$ref": "/schemas/definitions#mf_conditioned_floor_area"
      },
      "claimant_type": {
        "$ref": "/schemas/definitions#claimant_type"
      },
      "construction_type": {
        "$ref": "/schemas/definitions#construction_type"
      },
      "energy_data_evaluation_permission": {
        "$ref": "/schemas/definitions#energy_data_evaluation_permission"
      },
      "building_type": {
        "$ref": "/schemas/definitions#building_type"
      },
      "is_do_it_yourself": {
        "$ref": "/schemas/definitions#is_do_it_yourself"
      },
      "num_units": {
        "$ref": "/schemas/definitions#num_units"
      },
      "num_units_meeting_income_bucket": {
        "$ref": "/schemas/definitions#num_units_meeting_income_bucket"
      },
      "unit_name_or_number": {
        "$ref": "/schemas/definitions#unit_name_or_number"
      },
      "upgrade_applicability": {
        "$ref": "/schemas/definitions#upgrade_applicability"
      },
      "utility_bill_companies": {
        "$ref": "/schemas/definitions#utility_bill_companies"
      },
      "year_built": {
        "$ref": "/schemas/definitions#year_built"
      },
      "upgrade_type": {
        "$ref": "/schemas/definitions#upgrade_type"
      },
      "vendor_id": {
        "$ref": "/schemas/definitions#vendor_id"
      },
      "mf_building_income_bucket": {
        "$ref": "/schemas/definitions#electric_mf_building_income_bucket"
      },
      "dwelling_unit_income_bucket": {
        "$ref": "/schemas/definitions#electric_dwelling_unit_income_bucket"
      },
      "is_part_of_whole_building_project": {
        "$ref": "/schemas/definitions#is_part_of_whole_building_project"
      },
      "project_id": {
        "$ref": "/schemas/definitions#project_id"
      },
      "foundation_type": {
        "$ref": "/schemas/definitions#foundation_type"
      },
      "installation_cost": {
        "$ref": "/schemas/definitions#installation_cost"
      },
      "project_completion_date": {
        "$ref": "/schemas/definitions#project_completion_date"
      },
      "purchase_date": {
        "$ref": "/schemas/definitions#purchase_date"
      },
      "equipment_and_material_cost": {
        "$ref": "/schemas/definitions#equipment_and_material_cost"
      },
      "product_ids": {
        "$ref": "/schemas/definitions#product_ids"
      },
      "rebate_deducted": {
        "$ref": "/schemas/definitions#rebate_deducted"
      },
      "rebate_amount": {
        "$ref": "/schemas/definitions#rebate_amount"
      },
      "original_component_details": {
        "$ref": "/schemas/originalComponentDetails"
      },
      "upgrade_component_details": {
        "$ref": "/schemas/upgradeComponentDetails"
      },
      "product_descriptions": {
        "$ref": "/schemas/definitions#product_descriptions"
      },
      "product_serial_nums": {
        "$ref": "/schemas/definitions#product_serial_nums"
      }
    },
    "required": [
      "is_dac",
      "claimant_type",
      "construction_type",
      "energy_data_evaluation_permission",
      "building_type",
      "year_built",
      "upgrade_type",
      "utility_bill_companies",
      "rebate_deducted",
      "project_completion_date",
      "upgrade_component_details",
      "purchase_date",
      "equipment_and_material_cost",
      "rebate_amount"
    ],
    "additionalProperties": false,
    "oneOf": [
      {
        "required": [
          "building_address"
        ]
      },
      {
        "required": [
          "address_id"
        ]
      }
    ],
    "anyOf": [
      {
        "required": [
          "product_ids"
        ]
      },
      {
        "required": [
          "product_descriptions"
        ]
      }
    ],
    "allOf": [
      {
        "$comment": "Determine when is_part_of_whole_building_project is required or not allowed",
        "if": {
          "allOf": [
            {
              "not": {
                "properties": {
                  "claimant_type": {
                    "const": "TENANT"
                  }
                }
              }
            },
            {
              "properties": {
                "building_type": {
                  "const": "MULTIFAMILY"
                }
              }
            }
          ]
        },
        "then": {
          "required": [
            "is_part_of_whole_building_project"
          ]
        },
        "else": {
          "not": {
            "required": [
              "is_part_of_whole_building_project"
            ]
          }
        }
      },
      {
        "$comment": "Determine when is_do_it_yourself is required or not allowed",
        "if": {
          "anyOf": [
            {
              "properties": {
                "claimant_type": {
                  "const": "TENANT"
                }
              }
            },
            {
              "properties": {
                "building_type": {
                  "const": "SINGLE_FAMILY"
                }
              }
            }
          ]
        },
        "then": {
          "required": [
            "is_do_it_yourself"
          ]
        },
        "else": {
          "not": {
            "required": [
              "is_do_it_yourself"
            ]
          }
        }
      },
      {
        "$comment": "Determine when num_units, num_units_meeting_income_bucket, project_id, mf_building_income_bucket, and upgrade_applicability are required or not allowed",
        "if": {
          "required": [
            "is_part_of_whole_building_project"
          ],
          "properties": {
            "is_part_of_whole_building_project": {
              "const": true
            }
          }
        },
        "then": {
          "required": [
            "num_units",
            "num_units_meeting_income_bucket",
            "project_id",
            "mf_building_income_bucket",
            "upgrade_applicability"
          ]
        },
        "else": {
          "allOf": [
            {
              "not": {
                "required": [
                  "num_units"
                ]
              }
            },
            {
              "not": {
                "required": [
                  "num_units_meeting_income_bucket"
                ]
              }
            },
            {
              "not": {
                "required": [
                  "project_id"
                ]
              }
            },
            {
              "not": {
                "required": [
                  "mf_building_income_bucket"
                ]
              }
            },
            {
              "not": {
                "required": [
                  "upgrade_applicabilty"
                ]
              }
            }
          ]
        }
      },
      {
        "$comment": "Determine when mf_conditioned_floor_area is required or not allowed",
        "if": {
          "required": [
            "upgrade_applicability"
          ],
          "properties": {
            "upgrade_applicability": {
              "const": "WHOLE_BULIDING"
            }
          }
        },
        "then": {
          "required": [
            "mf_conditioned_floor_area"
          ]
        },
        "else": {
          "not": {
            "required": [
              "mf_conditioned_floor_area"
            ]
          }
        }
      },
      {
        "$comment": "Determine when dwelling_unit_income_bucket is required or not allowed",
        "if": {
          "anyOf": [
            {
              "properties": {
                "claimant_type": {
                  "const": "TENANT"
                }
              }
            },
            {
              "properties": {
                "building_type": {
                  "const": "SINGLE_FAMILY"
                }
              }
            },
            {
              "properties": {
                "is_part_of_whole_building_project": {
                  "const": false
                }
              }
            }
          ]
        },
        "then": {
          "required": [
            "dwelling_unit_income_bucket"
          ]
        },
        "else": {
          "not": {
            "required": [
              "dwelling_unit_income_bucket"
            ]
          }
        }
      },
      {
        "$comment": "Determine when sf_conditioned_floor_area is required or not allowed",
        "if": {
          "anyOf": [
            {
              "properties": {
                "claimant_type": {
                  "const": "TENANT"
                }
              }
            },
            {
              "properties": {
                "building_type": {
                  "const": "SINGLE_FAMILY"
                }
              }
            },
            {
              "required": [
                "upgrade_applicability"
              ],
              "properties": {
                "upgrade_applicability": {
                  "const": "SINGLE_UNIT"
                }
              }
            }
          ]
        },
        "then": {
          "required": [
            "sf_conditioned_floor_area"
          ]
        },
        "else": {
          "not": {
            "required": [
              "sf_conditioned_floor_area"
            ]
          }
        }
      },
      {
        "$comment": "Determine when unit_name_or_number is required or not allowed",
        "if": {
          "allOf": [
            {
              "properties": {
                "building_type": {
                  "const": "MULTIFAMILY"
                }
              }
            },
            {
              "anyOf": [
                {
                  "properties": {
                    "claimant_type": {
                      "const": "TENANT"
                    }
                  }
                },
                {
                  "required": [
                    "is_part_of_whole_building_project"
                  ],
                  "properties": {
                    "is_part_of_whole_building_project": {
                      "const": false
                    }
                  }
                },
                {
                  "required": [
                    "upgrade_applicability"
                  ],
                  "properties": {
                    "upgrade_applicability": {
                      "const": "SINGLE_UNIT"
                    }
                  }
                }
              ]
            }
          ]
        },
        "then": {
          "required": [
            "unit_name_or_number"
          ]
        },
        "else": {
          "not": {
            "required": [
              "unit_name_or_number"
            ]
          }
        }
      },
      {
        "if": {
          "properties": {
            "upgrade_type": {
              "const": "HEAT_PUMP_CLOTHES_DRYER"
            }
          }
        },
        "then": {
          "properties": {
            "upgrade_component_details": {
              "required": [
                "heat_pump_clothes_dryer_upgrade_details"
              ]
            }
          }
        }
      },
      {
        "if": {
          "properties": {
            "upgrade_type": {
              "const": "ELECTRIC_COOKING_APPLIANCE"
            }
          }
        },
        "then": {
          "properties": {
            "upgrade_component_details": {
              "required": [
                "electric_cooking_appliance_upgrade_details"
              ]
            }
          }
        }
      },
      {
        "if": {
          "properties": {
            "upgrade_type": {
              "const": "HEAT_PUMP_WATER_HEATER"
            }
          }
        },
        "then": {
          "properties": {
            "upgrade_component_details": {
              "required": [
                "heat_pump_water_heater_upgrade_details"
              ]
            }
          }
        }
      },
      {
        "if": {
          "properties": {
            "upgrade_type": {
              "const": "HEAT_PUMP_FOR_SPACE_HEATING_OR_COOLING"
            }
          }
        },
        "then": {
          "properties": {
            "upgrade_component_details": {
              "required": [
                "heat_pump_for_space_heating_or_cooling_upgrade_details"
              ]
            }
          }
        }
      },
      {
        "if": {
          "properties": {
            "upgrade_type": {
              "const": "ELECTRIC_LOAD_SERVICE_CENTER"
            }
          }
        },
        "then": {
          "properties": {
            "upgrade_component_details": {
              "required": [
                "electric_load_service_center_upgrade_details"
              ]
            }
          }
        }
      },
      {
        "if": {
          "properties": {
            "upgrade_type": {
              "const": "INSULATION_AIR_SEALING_VENTILATION"
            }
          }
        },
        "then": {
          "properties": {
            "upgrade_component_details": {
              "required": [
                "insulation_air_sealing_ventilation_upgrade_details"
              ]
            }
          }
        }
      },
      {
        "if": {
          "properties": {
            "upgrade_type": {
              "enum": [
                "HEAT_PUMP_WATER_HEATER",
                "HEAT_PUMP_FOR_SPACE_HEATING_OR_COOLING",
                "ELECTRIC_COOKING_APPLIANCE",
                "HEAT_PUMP_CLOTHES_DRYER"
              ]
            }
          }
        },
        "then": {
          "required": [
            "product_serial_nums"
          ]
        },
        "else": {
          "if": {
            "not": {
              "properties": {
                "upgrade_type": {
                  "const": "INSULATION_AIR_SEALING_VENTILATION"
                }
              }
            }
          },
          "then": {
            "not": {
              "required": [
                "product_serial_nums"
              ]
            }
          }
        }
      },
      {
        "if": {
          "properties": {
            "upgrade_type": {
              "const": "ELECTRIC_COOKING_APPLIANCE"
            }
          }
        },
        "then": {
          "properties": {
            "original_component_details": {
              "required": [
                "electric_cooking_appliance_original_details"
              ]
            }
          }
        }
      },
      {
        "if": {
          "properties": {
            "upgrade_type": {
              "const": "HEAT_PUMP_WATER_HEATER"
            }
          }
        },
        "then": {
          "properties": {
            "original_component_details": {
              "required": [
                "heat_pump_water_heater_original_details"
              ]
            }
          }
        }
      },
      {
        "if": {
          "properties": {
            "upgrade_type": {
              "const": "HEAT_PUMP_FOR_SPACE_HEATING_OR_COOLING"
            }
          }
        },
        "then": {
          "properties": {
            "original_component_details": {
              "required": [
                "heat_pump_for_space_heating_or_cooling_original_details"
              ]
            }
          }
        }
      },
      {
        "if": {
          "properties": {
            "upgrade_type": {
              "const": "ELECTRIC_LOAD_SERVICE_CENTER"
            }
          }
        },
        "then": {
          "properties": {
            "original_component_details": {
              "required": [
                "electric_load_service_center_original_details"
              ]
            }
          }
        }
      },
      {
        "if": {
          "properties": {
            "upgrade_type": {
              "const": "INSULATION_AIR_SEALING_VENTILATION"
            }
          }
        },
        "then": {
          "properties": {
            "original_component_details": {
              "required": [
                "insulation_air_sealing_ventilation_original_details"
              ]
            }
          }
        }
      }
    ]
  }
}
