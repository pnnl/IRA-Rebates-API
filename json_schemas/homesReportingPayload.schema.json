{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://ira-rebates.labworks.org/schemas/homesReporting",
  "type": "array",
  "items": {
    "type": "object",
    "properties": {
      "address_id": {
        "$ref": "/schemas/definitions#address_id"
      },
      "building_address": {
        "$ref": "/schemas/definitions#building_address"
      },
      "building_type": {
        "$ref": "/schemas/definitions#building_type"
      },
      "claimant_type": {
        "$ref": "/schemas/definitions#claimant_type"
      },
      "construction_type": {
        "$ref": "/schemas/definitions#construction_type"
      },
      "energy_data_evaluation_permission": {
        "$ref": "/schemas/definitions#energy_data_evaluation_permission"
      },
      "num_units": {
        "$ref": "/schemas/definitions#num_units"
      },
      "num_units_meeting_income_bucket": {
        "$ref": "/schemas/definitions#num_units_meeting_income_bucket"
      },
      "unit_name_or_number": {
        "$ref": "/schemas/definitions#unit_name_or_number"
      },
      "rebate_type": {
        "$ref": "/schemas/definitions#rebate_type"
      },
      "is_model_calibrated": {
        "$ref": "/schemas/definitions#is_model_calibrated"
      },
      "doe_approved_bpi_2400_compliant_software_used": {
        "$ref": "/schemas/definitions#doe_approved_bpi_2400_compliant_software_used"
      },
      "software_used_to_estimate_measured_savings": {
        "$ref": "/schemas/definitions#software_used_to_estimate_measured_savings"
      },
      "prior_total_annual_energy_usage_kwh_equivalent": {
        "$ref": "/schemas/definitions#prior_total_annual_energy_usage_kwh_equivalent"
      },
      "post_retrofit_total_annual_energy_usage_kwh_equivalent": {
        "$ref": "/schemas/definitions#post_retrofit_total_annual_energy_usage_kwh_equivalent"
      },
      "estimated_post_retrofit_annual_energy_usage_kwh_equivalent": {
        "$ref": "/schemas/definitions#estimated_post_retrofit_annual_energy_usage_kwh_equivalent"
      },
      "utility_bill_companies": {
        "$ref": "/schemas/definitions#utility_bill_companies"
      },
      "upgrade_applicability": {
        "$ref": "/schemas/definitions#upgrade_applicability"
      },
      "mf_building_income_bucket": {
        "$ref": "/schemas/definitions#homes_mf_building_income_bucket"
      },
      "dwelling_unit_income_bucket": {
        "$ref": "/schemas/definitions#homes_dwelling_unit_income_bucket"
      },
      "is_whole_building_project": {
        "$ref": "/schemas/definitions#is_whole_building_project"
      },
      "portfolio_id": {
        "$ref": "/schemas/definitions#portfolio_id"
      },
      "rebate_deducted": {
        "$ref": "/schemas/definitions#rebate_deducted"
      },
      "equipment_and_material_cost": {
        "$ref": "/schemas/definitions#equipment_and_material_cost"
      },
      "installation_cost": {
        "$ref": "/schemas/definitions#installation_cost"
      },
      "project_completion_date": {
        "$ref": "/schemas/definitions#project_completion_date"
      },
      "rebate_amount": {
        "$ref": "/schemas/definitions#rebate_amount"
      }
    },
    "required": [
      "building_type",
      "claimant_type",
      "construction_type",
      "energy_data_evaluation_permission",
      "rebate_type",
      "prior_total_annual_energy_usage_kwh_equivalent",
      "rebate_deducted",
      "equipment_and_material_cost",
      "installation_cost",
      "project_completion_date",
      "rebate_amount"
    ],
    "additionalProperties": false,
    "oneOf": [
      {
        "required": [
          "building_address"
        ]
      },
      {
        "required": [
          "address_id"
        ]
      }
    ],
    "allOf": [
      {
        "if": {
          "properties": {
            "claimant_type": {
              "const": "AGGREGATOR"
            }
          }
        },
        "then": {
          "required": [
            "portfolio_id"
          ]
        },
        "else": {
          "not": {
            "required": [
              "portfolio_id"
            ]
          }
        }
      },
      {
        "if": {
          "properties": {
            "rebate_type": {
              "const": "MODELED"
            }
          }
        },
        "then": {
          "required": [
            "post_retrofit_total_annual_energy_usage_kwh_equivalent",
            "is_model_calibrated",
            "doe_approved_bpi_2400_compliant_software_used"
          ],
          "not": {
            "required": [
              "estimated_post_retrofit_annual_energy_usage_kwh_equivalent"
            ]
          }
        },
        "else": {
          "$comment": "Rebate type is MEASURED",
          "required": [
            "estimated_post_retrofit_annual_energy_usage_kwh_equivalent"
          ],
          "not": {
            "required": [
              "post_retrofit_total_annual_energy_usage_kwh_equivalent",
              "is_model_calibrated",
              "doe_approved_bpi_2400_compliant_software_used"
            ]
          }
        }
      },
      {
        "$comment": "Determine when is_whole_building_project is required or not allowed",
        "if": {
          "allOf": [
            {
              "not": {
                "properties": {
                  "claimant_type": {
                    "const": "TENANT"
                  }
                }
              }
            },
            {
              "properties": {
                "building_type": {
                  "const": "MULTIFAMILY"
                }
              }
            }
          ]
        },
        "then": {
          "required": [
            "is_whole_building_project"
          ]
        },
        "else": {
          "not": {
            "required": [
              "is_whole_building_project"
            ]
          }
        }
      },
      {
        "$comment": "Determine when num_units, num_units_meeting_income_bucket, mf_building_income_bucket, and upgrade_applicability are required or not allowed",
        "if": {
          "required": [
            "is_whole_building_project"
          ],
          "properties": {
            "is_whole_building_project": {
              "const": true
            }
          }
        },
        "then": {
          "required": [
            "num_units",
            "num_units_meeting_income_bucket",
            "mf_building_income_bucket",
            "upgrade_applicability"
          ]
        },
        "else": {
          "allOf": [
            {
              "not": {
                "required": [
                  "num_units"
                ]
              }
            },
            {
              "not": {
                "required": [
                  "num_units_meeting_income_bucket"
                ]
              }
            },
            {
              "not": {
                "required": [
                  "mf_building_income_bucket"
                ]
              }
            },
            {
              "not": {
                "required": [
                  "upgrade_applicabilty"
                ]
              }
            }
          ]
        }
      },
      {
        "$comment": "Determine when dwelling_unit_income_bucket is required or not allowed",
        "if": {
          "anyOf": [
            {
              "properties": {
                "claimant_type": {
                  "const": "TENANT"
                }
              }
            },
            {
              "properties": {
                "building_type": {
                  "const": "SINGLE_FAMILY"
                }
              }
            },
            {
              "properties": {
                "is_whole_building_project": {
                  "const": false
                }
              }
            }
          ]
        },
        "then": {
          "required": [
            "dwelling_unit_income_bucket"
          ]
        },
        "else": {
          "not": {
            "required": [
              "dwelling_unit_income_bucket"
            ]
          }
        }
      },
      {
        "$comment": "Determine when unit_name_or_number is required or not allowed",
        "if": {
          "allOf": [
            {
              "properties": {
                "building_type": {
                  "const": "MULTIFAMILY"
                }
              }
            },
            {
              "anyOf": [
                {
                  "properties": {
                    "claimant_type": {
                      "const": "TENANT"
                    }
                  }
                },
                {
                  "required": [
                    "is_whole_building_project"
                  ],
                  "properties": {
                    "is_whole_building_project": {
                      "const": false
                    }
                  }
                },
                {
                  "required": [
                    "upgrade_applicability"
                  ],
                  "properties": {
                    "upgrade_applicability": {
                      "const": "SINGLE_UNIT"
                    }
                  }
                }
              ]
            }
          ]
        },
        "then": {
          "required": [
            "unit_name_or_number"
          ]
        },
        "else": {
          "not": {
            "required": [
              "unit_name_or_number"
            ]
          }
        }
      }
    ]
  }
}
